sol_dir = 't*=14/C.G.2/build/fs_sol_1d'
t_array = np.fromfile('%s/t.dat' % sol_dir, dtype='f8')
time_steps = len(t_array)
x_array = np.fromfile('%s/x.dat' % sol_dir, dtype='f8')
nx = len(x_array)
sol = np.fromfile('%s/sol.dat' % sol_dir, dtype='f8').reshape((112, nx))
f_l = energy(67)
NX = len(f_l)
F_l = np.zeros(NX)
for k in range(0,NX):
 F_l[k] = k * f_l[k]
plt.plot(F_l[0:NX])

plt.legend([r'$m_{\phi}t_{*}=10.00$', r'$m_{\phi}t_{*}=12.00$', r'$m_{\phi}t_{*}=14.00$'], loc='upper right')
plt.rcParams["figure.figsize"] = fig_size
plt.xscale('log')
plt.axhline(0,color='black',linewidth=0.6)
plt.axis([1,10000,0,0.20])
plt.title(r'Cosine Gaussian-1, $\alpha_{\phi}=0.05$, $m_{\phi}t_{p}=181$, $m_{\phi}t=184$', fontsize=17, fontweight='bold')
plt.ylabel(r'$(m_{\phi}x_p/{\pi})k\cdot\epsilon (k)$', fontsize=14)
plt.xlabel(r'$(m_{\phi}x_p/{\pi})k$', fontsize=14)
plt.savefig('Cosine_Gaussian_1_a=0.05_tp=181_t=184_logscale_2.png')
plt.close()


